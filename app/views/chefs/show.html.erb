<%= render 'shared/page_title', title: "Chef #{@chef.chefname}'s profile" %>
<div class="row">
  <div class="col-md-4 col-md-offset-4 center">
    <%= gravatar_for @chef, size: 150 %>
  </div>
</div>
<% if @chef.recipees.count != 0 %>
  <h4 align="center"><%= @chef.chefname %>'s recipees</h4>
  <div align="center">
    <%= will_paginate @chef_recipees %>
  </div>
  <%= render 'recipees/recipee', obj: @chef_recipees %>
  <div align="center">
    <%= will_paginate @chef_recipees %>
  </div>
<% else %>
  <h4 align="center">No recipees yet!</h4>
<% end %>