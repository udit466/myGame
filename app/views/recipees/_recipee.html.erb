<% obj.each do |recipee| %>
	<div class="row">
		<div class="col-md-2">
			<section class="chef_info center">
				<%= gravatar_for(recipee.chef, size: 120) %>
			</section>
		</div>
	<div class= "cold-md-8 well">
	 <h4><%= link_to recipee.name, recipee_path(recipee) %></h4>
	<p><%= truncate(recipee.description, length: 150) %></p>
	<p>
	<span class= "quiet"><small>Created<%= time_ago_in_words(recipee.created_at)%> ago</small></span>
	</p>
	<% if logged_in? && current_chef == recipee.chef %>
		<div class='recipee-actions'>
			<%= link_to "Edit this recipee", edit_recipee_path(recipee),  class: 'btn btn-xs btn-warning' %>
			 <%= link_to "Delete this recipee", recipee_path(recipee), method: :delete,  data: { confirm: "Are you sure you want to delete?" },
	              class: "btn btn-xs btn-danger" %>			
		</div>
	<% end %>
	</div>
	</div>
<% end %>
